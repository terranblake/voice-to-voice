# Environment Configuration
# Copy this file to .env and fill in your values

# Hugging Face Token (required for dataset upload and model access)
HF_TOKEN=your_hugging_face_token_here

# Default Configuration
DEFAULT_OUTPUT_DIR=./voice_clone
DEFAULT_MAX_STEPS=1000
DEFAULT_HF_REPO=username/female_voice_ds
DEFAULT_BASE_TTS_MODEL=unsloth/sesame-csm-1b

# Optional: Override default reference audio slice (start,end in seconds)
DEFAULT_REF_START=0
DEFAULT_REF_END=15

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT="%(levelname)s | %(name)s | %(message)s"

# Model Training Configuration
DEFAULT_BATCH_SIZE=2
DEFAULT_GRADIENT_ACCUMULATION=8
DEFAULT_LEARNING_RATE=2e-4

# Audio Processing Configuration
AUDIO_SAMPLE_RATE=44100
AUDIO_CHANNELS=2
TTS_SAMPLE_RATE=24000
